.profile-clicked
  -# .profile-clicked__errors
  -#   = render "devise/shared/error_messages", resource: current_user
  .profile-clicked__wrapper
    .profile-clicked__wrapper__contents
      .profile-clicked__wrapper__contents__content
        .profile-clicked__wrapper__contents__content__details
          %ul.profile-clicked__wrapper__contents__content__details__detail.clearfix
            %li.profile-clicked__wrapper__contents__content__details__detail__profile-edit.active
              プロフィール編集
            %li.profile-clicked__wrapper__contents__content__details__detail__card
              カード情報
            %li.profile-clicked__wrapper__contents__content__details__detail__address
              配送先
          .profile-clicked__wrapper__contents__content__details__contents
            %ul.profile-clicked__wrapper__contents__content__details__contents__profile-edit.show
              = form_for(current_user) do |f|
                %li
                  = f.label :ニックネーム
                  = f.text_field :nickname
                %li
                  = f.label :email
                  = f.email_field :email, autofocus: true, autocomplete: "email"
                %li
                  = f.label :password
                  - if @minimum_password_length
                    %em
                      = @minimum_password_length 
                      文字以上
                  = f.password_field :password, autocomplete: "new-password"
                %li
                  = f.label :苗字（漢字）
                  = f.text_field :last_name
                %li
                  = f.label :名前（漢字）
                  = f.text_field :first_name
                %li
                  = f.label :苗字（かな）
                  = f.text_field :last_name_kana
                %li
                  = f.label :名前（かな）
                  = f.text_field :first_name_kana
                %li
                  = f.label :誕生日
                  = f.date_field :birthday
                %li.intro
                  = f.label :自己紹介
                  = f.text_area :introduction
                .action
                  = f.submit "変更"
                .actions2
                  %a.esc ×
            %ul.profile-clicked__wrapper__contents__content__details__contents__card
              = form_tag("/payments", method: :post, id: 'charge-form') do
                %span.charge-errors
                .register-inner__content

                  .form-group
                    %span.form-group__registration_font カード番号
                    %span.form-group__require-icon 必須
                    %input.form-group__number.input-default{maxlength: "16", name: "number", placeholder: "カード番号", type: "text", id: "payment_card_no"}/
                    = image_tag "card.png", class:"card-png"

                  .form-group
                    %span.form-group__registration_font 有効期限
                    %span.form-group__require-icon 必須
                    .form-group__expiration_date_box
                      .form-group__expiration_date_box__wrap
                        %select.form-group__exp_month#payment_expiration_date_1i{maxlength: "2", name: "exp_month", type: "text"}
                          %option{value: "1"}01
                          %option{value: "2"}02
                          %option{value: "3"}03
                          %option{value: "4"}04
                          %option{value: "5"}05
                          %option{value: "6"}06
                          %option{value: "7"}07
                          %option{value: "8"}08
                          %option{value: "9"}09
                          %option{value: "10"}10
                          %option{value: "11"}11
                          %option{value: "12"}12
                        %i.fas.fa-angle-down.payment-select-icon
                        %text.form-group__expiration_date_box__text 月

                    .expiration_date_box
                      .expiration_date_box__wrap
                        %select.exp_year#payment_expiration_date_2i{maxlength: "4", name: "exp_year", type: "text"}
                          %option{value: "2019"}19
                          %option{value: "2020"}20
                          %option{value: "2021"}21
                          %option{value: "2022"}22
                          %option{value: "2023"}23
                          %option{value: "2024"}24
                          %option{value: "2025"}25
                          %option{value: "2026"}26
                          %option{value: "2027"}27
                          %option{value: "2028"}28
                          %option{value: "2029"}29
                        %i.fas.fa-angle-down.payment-select-icon
                        %text.expiration_date_box__text 年

                  .form-group
                    %span.form-group__registration_font セキュリティー番号
                    %span.form-group__require-icon 必須
                    %input.form-group__cvc.input-default{maxlength: "3", name: "cvc", placeholder: "カード背面もしくは４桁もしくは３桁の番号", type: "text", id: "payment_card_cvc"}
                    .form-group__card-indo
                      カード裏面の番号とは
                  .actions
                    %button.register-member#submit-button{type: "submit"} 登録完了
                  .actions2
                    %a.esc ×
            %ul.profile-clicked__wrapper__contents__content__details__contents__address
              = form_for(@user_address) do |f|
                -# - if @user_address.errors.any?
                -#   %h2= "#{@user_address.errors.full_messages.count}件のエラーが発生しました。"
                -#   %ul
                -#     - @user_address.errors.full_messages.each do |message|
                -#       %li= message
                %li
                  = f.label :配送先　名前（漢字）
                  = f.text_field :address_last_name
                %li
                  = f.label :配送先　名前（漢字）
                  = f.text_field :address_first_name
                %li
                  = f.label :配送先　苗字（かな）
                  = f.text_field :address_last_name_kana
                %li
                  = f.label :配送先　名前（かな）
                  = f.text_field :address_first_name_kana
                %li
                  = f.label :郵便番号
                  = f.text_field :zip_code
                %li
                  = f.label :都道府県
                  = f.collection_select :prefecture_id, Prefecture.all, :id, :name
                %li
                  = f.label :市区町村
                  = f.text_field :city
                %li
                  = f.label :番地
                  = f.text_field :street
                %li
                  = f.label :建物名
                  = f.text_field :building_name
                %li
                  = f.label :電話番号
                  = f.text_field :phone_number
                .action
                  = f.submit "変更"
                .actions2
                  %a.action2__esc ×