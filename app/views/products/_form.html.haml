= form_with(class: "Main_Container", model: @product, local: true) do |f|
  .Main
    .Main__left
      = f.fields_for :product_images do |image|
        .Main__left__Image1
          .js-file_group{"data-index" => "#{image.index}"}
            = image.file_field :image, class: 'js-file'
            - if @product.persisted?
              = image.check_box :_destroy, data:{ index: image.index }, class: 'hidden-destroy'
            - if @product.persisted?
              .js-file_group{"data-index" => "#{@product.product_images.count}"}
                = file_field_tag :image, name: "product[product_images_attributes][0][image]", class: 'js-file'

        .Main__left__Kowaku
          .Main__left__Image2
            .js-file_group{"data-index" => 1}
              %input.js-file{:id => "product_images_attributes_1_image", :name => "product[product_images_attributes][1][image]", :type => "file"}/

          .Main__left__Image3
            .js-file_group{"data-index" => 2}
              %input.js-file{:id => "product_images_attributes_2_image", :name => "product[product_images_attributes][2][image]", :type => "file"}/

          .Main__left__Image4
            .js-file_group{"data-index" => 3}
              %input.js-file{:id => "product_images_attributes_3_image", :name => "product[product_images_attributes][3][image]", :type => "file"}/

        .Main__left__kingaku  
          価格#{f.number_field :price}
          %br/


        -# .Main__left__kingaku_kowaku
        -#   .Main__left__kingaku_kowaku__tesuryo  
        -#     自動計算
        -#   .Main__left__kingaku_kowaku__huyouriage
        -#     自動計算   

        -# .Main__left__kakakusettei
        -#   価格設定
        -# .Main__left__suryo
        -#   数量
        -# .Main__left__senyoshuppin
        -#   専用出品

    .Main__right
      .Main__left__kingaku
        商品名#{f.text_field :product_name}
        %br/
      .Main__left__kingaku
        商品説明#{f.text_field :description}
        %br/      
      .Main__left__category
        %p カテゴリ
        = f.collection_select :category_id, @category.all, :id, :name
        
      .Main__left__brand
        %p ブランド（任意）
        = f.collection_select :brand_id, @brand.all, :id, :name
   
        

      .Main__left__jyoutai
        %p 状態
        = f.select :product_status, Product.statuses.keys, id: "select_status"
 
      .Main__left__haisouryou
        %p 配送料(配送料金のカラム？)
        = f.select :shipping_fee, Product.bears.keys, id: "select_status"

      .Main__left__haisouhouhou
        %p 配送方法
        = f.select :shipping_type, Product.houhous.keys, id: "select_status"

      .Main__left__shuppinchiiki
        %p 出品地域
        = f.collection_select :prefecture, Prefecture.all, :id, :name
        

      .Main__left__hassoubinomeyasu
        %p 発送日の目安
        = f.select :shipping_day, Product.days.keys, id: "select_status"

  .Main_submit
    %input.Main_submit--button{value: "投稿する", type:"submit"}


