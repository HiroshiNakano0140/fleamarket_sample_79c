= form_with(class: "Main_Container", model: @product, local: true) do |f|

  .Main
    = render 'layouts/error_messages', model: f.object
    .Main__left
      = f.fields_for :product_images do |image|
        .Main__left__Image1
          .js-file_group{"data-index" => 0}
            %img.Review_left__No_image{ src: "/assets/Noimage.png", alt: "logo",id: "img0"}
            = image.file_field :image,id:"myfile"

        .Main__left__Kowaku
          .Main__left__Image2
            .js-file_group{"data-index" => 1}
              %img.Review_left__No_image{ src: "/assets/Noimage.png", alt: "logo",id: "img1"}
              %input.js-file{:id => "product_images_attributes_1_image", :name => "product[product_images_attributes][1][image]", :type => "file"}/
              -# = image.file_field :image,id:"myfile2"

          .Main__left__Image3
            .js-file_group{"data-index" => 2}
              %img.Review_left__No_image{ src: "/assets/Noimage.png", alt: "logo",id: "img2"}
              %input.js-file{:id => "product_images_attributes_2_image", :name => "product[product_images_attributes][2][image]", :type => "file"}/

          .Main__left__Image4
            .js-file_group{"data-index" => 3}
              %img.Review_left__No_image{ src: "/assets/Noimage.png", alt: "logo",id: "img3"}
              %input.js-file{:id => "product_images_attributes_3_image", :name => "product[product_images_attributes][3][image]", :type => "file"}/



    .Main__right
      .Main__left__kingaku  
        価格(¥300~50,000)#{f.number_field :price}
        %br/

      .Main__left__kingaku
        商品名#{f.text_field :product_name}
        %br/
      .Main__left__kingaku
        商品説明#{f.text_field :description}
        %br/      
      .Main__left__category
        %p カテゴリ
        = f.collection_select :category_id, Category.all, :id, :name, { include_blank: "---", selected:"" }, id: "category_form"
        
      .Main__left__brand
        %p ブランド（任意）
        = f.collection_select :brand_id, Brand.all, :id, :name, { include_blank: "---", selected:"" }, id: "category_form"

      .Main__left__size
        %p サイズ
        #{f.text_field :size}
   
        

      .Main__left__jyoutai
        %p 状態
        = f.select :product_status, Product.statuses.keys,{prompt:"---"},  id: "select_status"
 
      .Main__left__haisouryou
        %p 配送料
        = f.select :shipping_fee, Product.bears.keys,{prompt:"---"},  id: "select_status"

      .Main__left__haisouhouhou
        %p 配送方法
        = f.select :shipping_type, Product.houhous.keys,{prompt:"---"},  id: "select_status"

      .Main__left__shuppinchiiki
        %p 出品地域
        = f.collection_select :prefecture, Prefecture.all, :id, :name, { include_blank: "---", selected:"" }, id: "category_form"
        

      .Main__left__hassoubinomeyasu
        %p 発送日の目安
        = f.select :shipping_day, Product.days.keys,{prompt:"---"}, id: "select_status"


  .Main_submit
    %input.Main_submit--button{value: "投稿する", type:"submit"}


