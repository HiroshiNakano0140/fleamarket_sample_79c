.Wrapper
  .Top
    %h2 出品
    %p 商品情報を入力してください
  .WrapperContents
    .LeftContents
      .LeftContents__FirstContent
        .LeftContents__FirstContent__img
        -# = image_tag src="upload_image.png", width: "370px", height: "370px"
        -# = form.file_field :image //upload用のgemなどが必要
      %ul.LeftContents__SecondContent
        %li.LeftContents__SecondContent__Left
          .LeftContents__SecondContent__Left__img
          = image_tag src="icon_camera.gif"
        %li.LeftContents__SecondContent__Center
          .LeftContents__SecondContent__Center__img
          = image_tag src="icon_camera.gif"
        %li.LeftContents__SecondContent__Right
          .LeftContents__SecondContent__Right__img
          = image_tag src="icon_camera.gif"
      .LeftContents__ThirdContent
        .LeftContents__ThirdContent__Top
          .LeftContents__ThirdContent__Top__Left
            %h2 商品価格(必須)
          .LeftContents__ThirdContent__Top__Center
            %input#LeftContents__ThirdContent__Top__Center__input{placeholder: "300~50,000", type: "text"}
          .LeftContents__ThirdContent__Top__Right
            %p 円
        .LeftContents__ThirdContent__Bottom
          .LeftContents__ThirdContent__Bottom__Left
            .LeftContents__ThirdContent__Bottom__Left__One
              %p 決済手数料 
            .LeftContents__ThirdContent__Bottom__Left__Two
              %p 0
            .LeftContents__ThirdContent__Bottom__Left__Three
              %p 円
          .LeftContents__ThirdContent__Bottom__Right
            .LeftContents__ThirdContent__Bottom__Right__One
              %p 付与予定売上
            .LeftContents__ThirdContent__Bottom__Right__Two
              %p 0
            .LeftContents__ThirdContent__Bottom__Right__Three
              %p 円
      .LeftContents__FourthContent
        .LeftContents__FourthContent__Top
          %p その他オプション
        .LeftContents__FourthContent__MiddleBox
          .LeftContents__FourthContent__MiddleBox__Price
            .LeftContents__FourthContent__MiddleBox__Price__Left
              %p 価格設定
            .LeftContents__FourthContent__MiddleBox__Price__Right
              =check_box_tag :check1
              =label_tag :check1, "価格未設定にする"
          .LeftContents__FourthContent__MiddleBox__Amount
            .LeftContents__FourthContent__MiddleBox__Amount__Left
              %p 数量
            .LeftContents__FourthContent__MiddleBox__Amount__Right
              =check_box_tag :check1
              =label_tag :check1, "同じ商品を複数出品する"
          .LeftContents__FourthContent__MiddleBox__Personal
            .LeftContents__FourthContent__MiddleBox__Personal__Left
              %p 専用出品
            .LeftContents__FourthContent__MiddleBox__Personal__Right
              取引相手を選択する
        .LeftContents__FourthContent__Bottom
          %p その他のオプションガイド
          
    .RightContents
      .RightContents__FirstContent
        .RightContents__FirstContent__Left
          %p 商品名(必須)
        .RightContents__FirstContent__Right
          %input#RightContents__FirstContent__Right__input{placeholder: "30文字以内で入力", type: "text"}
      .RightContents__SecondContent
        .RightContents__SecondContent__Left
          %p 商品説明(必須)
        .RightContents__SecondContent__Right
          %textarea#RightContents__SecondContent__Right__input{placeholder: "2048文字以内で入力", type: "textarea"}
      .RightContents__ThirdContent
        .RightContents__ThirdContent__Category
          .RightContents__ThirdContent__Category__Left
            %p カテゴリ(必須)
          .RightContents__ThirdContent__Category__Right
            カテゴリを選択する
        .RightContents__ThirdContent__Status
          .RightContents__ThirdContent__Status__Left
            %p 状態(必須)
          .RightContents__ThirdContent__Status__Right
            選択してください
        .RightContents__ThirdContent__ShippingFee
          .RightContents__ThirdContent__ShippingFee__Left
            %p 配送料(必須)
          .RightContents__ThirdContent__ShippingFee__Right
            選択してください
        .RightContents__ThirdContent__ShippingType
          .RightContents__ThirdContent__ShippingType__Left
            %p 配送方法(必須)
          .RightContents__ThirdContent__ShippingType__Right
            選択してください
        .RightContents__ThirdContent__ListedArea
          .RightContents__ThirdContent__ListedArea__Left
            %p 出品地域(必須)
          .RightContents__ThirdContent__ListedArea__Right
            選択してください
        .RightContents__ThirdContent__ShippingDay
          .RightContents__ThirdContent__ShippingDay__Left
            %p 発送日の目安(必須)
          .RightContents__ThirdContent__ShippingDay__Right
            選択してください
          .RightContents__ThirdContent__ShippingDay__answer

  .Bottom
    %input.submit(type="button" id="button" value="確認")
