%h2 プロフィール編集
= link_to "戻る", :back
= form_for(current_user) do |f|
  .field
    = f.label :nickname
    = f.text_field :nickname

  .field
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email"

  .field
    = f.label :last_name
    = f.text_field :last_name

  .field
    = f.label :first_name
    = f.text_field :first_name

  .field
    = f.label :last_name_kana
    = f.text_field :last_name_kana

  .field
    = f.label :first_name_kana
    = f.text_field :first_name_kana

  .field
    = f.label :birthday
    = f.date_select :birthday, use_month_numbers: true, start_year: 1900

  .field
    = f.label :introduction
    = f.text_field :introduction



  .action
    = f.submit "Update"